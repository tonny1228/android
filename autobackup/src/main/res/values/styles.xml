<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="activity_item_bg">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ffffff</item>

    </style>

    <style name="setting_row">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginBottom">1px</item>
    </style>

    <style name="server">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="activity_title">
        <item name="android:textSize">24dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="activity_title_bg">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="activity_title_button">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
