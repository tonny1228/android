<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="works.tonny.mobile.demo4.LoginActivity">

    <include
        layout="@layout/activity_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:background="@drawable/input_container"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent" android:text="密码" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_style"
            android:drawablePadding="10.0dip"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/input_container"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent" android:text="确认密码" />

        <EditText
            android:id="@+id/re_password"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_style"
            android:drawablePadding="10.0dip"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/input_container"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent" android:text="姓名" />

        <EditText
            android:id="@+id/name"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_style"
            android:drawablePadding="10.0dip"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/input_container"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent" android:text="身份证号" />

        <EditText
            android:id="@+id/id"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_style"
            android:drawablePadding="10.0dip"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/input_container"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent" android:text="性别" />

        <EditText
            android:id="@+id/gender"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_style"
            android:drawablePadding="10.0dip"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/input_container"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent" android:text="地址" />

        <EditText
            android:id="@+id/address"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_style"
            android:drawablePadding="10.0dip"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </LinearLayout>



</LinearLayout>
