<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             tools:context="works.tonny.mobile.fragment.ListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/spliter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/index_news_bottom" />
        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/list_item_image"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/list_item_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/index_news_left" />

            <TextView
                android:id="@+id/list_item_title"
                style="@style/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:text="我就只是一个大标题而已" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_container"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/list_item_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/list_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血统证书号："
                     />

                <TextView
                    android:id="@+id/match_date"
                    style="@style/list_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间:"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/list_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="耳号：" />

                <TextView
                    android:id="@+id/match_time"
                    style="@style/list_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举办时间:" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
