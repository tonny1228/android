<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_item_right"
            android:layout_centerHorizontal="true"
            android:layout_width="162dp"
            android:layout_height="222dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/logo3" />


        <TextView
            android:id="@+id/list_item_title"
            style="@style/list_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/list_item_right"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我就只是一个大标题而已"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_item_right1"
            android:layout_centerHorizontal="true"
            android:layout_width="162dp"
            android:layout_height="222dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:id="@+id/list_item_title1"
            style="@style/list_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/list_item_right1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>
