<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/list_item_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"

        android:src="@drawable/index_news_left" />

    <ImageView
        android:id="@+id/list_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/index_news_right" />


    <TextView
        android:id="@+id/list_item_title"
        style="@style/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="17dp"
        android:layout_toRightOf="@id/list_item_image1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="我就只是一个大标题而已" />

    <TextView
        android:id="@+id/list_item_date"
        style="@style/list_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/list_item_image1"
        android:text="我就只是一个大标题而已" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_item_date"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/index_news_bottom" />

</RelativeLayout>