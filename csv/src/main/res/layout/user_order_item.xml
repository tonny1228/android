<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="works.tonny.mobile.fragment.ListFragment">

    <TextView
        android:id="@+id/ddh"
        style="@style/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="CSZ89912399" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收人：" />

        <TextView
            android:id="@+id/shr"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三" />

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="金额：" />

        <TextView
            android:id="@+id/je"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请中" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：" />

        <TextView
            android:id="@+id/date"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="状态：" />

        <TextView
            android:id="@+id/zt"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请中" />

    </LinearLayout>

</LinearLayout>
