<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context="works.tonny.mobile.fragment.ListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="3dp"

        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/list_item_image"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/list_item_image"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/list_item_image"
            android:text="摘要"
            android:textColor="#888888"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/list_item_m"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:text="￥"
            android:textColor="#999999"
            android:layout_below="@id/list_item_summary"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"

            android:layout_toRightOf="@id/list_item_image"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:text="218"
            android:textColor="#999999"
            android:layout_below="@id/list_item_summary"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"

            android:layout_toRightOf="@id/list_item_m"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_summary"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/list_item_image">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/cart_num_left"
                android:background="@drawable/cart_num"
                android:textSize="14sp"
                android:text="-" />

            <EditText
                android:layout_width="60dip"
                android:layout_height="25dip"
                android:padding="0px"
                android:id="@+id/cart_num"
                android:layout_toRightOf="@id/cart_num_left"
                android:layout_alignParentTop="true"
                android:background="@drawable/cart_num"
                android:textAlignment="center"
                android:layout_marginLeft="-1px"
                android:gravity="center"
                android:text="1" android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_toRightOf="@id/cart_num"
                android:layout_marginLeft="-1px"
                android:layout_alignParentTop="true"
                android:background="@drawable/cart_num"
                android:textSize="14sp"
                android:id="@+id/cart_add"
                android:text="+" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0px"
                android:id="@+id/cart_index"
                android:layout_toRightOf="@id/cart_add"
                android:layout_alignParentTop="true"
                android:background="@drawable/cart_num"
                android:visibility="invisible"
                android:text="1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="5dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/cart_num"
                android:textSize="14sp"
                android:id="@+id/cart_delete"
                android:text="删除" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
