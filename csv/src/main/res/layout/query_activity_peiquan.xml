<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="5dp"
    tools:context="works.tonny.mobile.demo6.match.ResultViewActivity">


    <LinearLayout
        style="@style/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="配犬证明号:" />

        <TextView
            android:id="@+id/provenums"
            style="@style/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/list_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配犬日期:" />

        <TextView
            android:id="@+id/fmprovetime"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        style="@style/list_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="母犬血统证书号:" />

        <TextView
            android:id="@+id/mblood"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        style="@style/list_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="母犬主人:" />

        <TextView
            android:id="@+id/hostm"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        style="@style/list_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期:" />

        <TextView
            android:id="@+id/birthdate"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        style="@style/list_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="犬只数:" />

        <TextView
            android:id="@+id/nums"
            style="@style/list_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

    </LinearLayout>


</LinearLayout>
